<% provide(:title, "选择数量") %>
<h1>图书已存在</h1>
<h4 class="book-profile">书号：<%= @book.isbn %> 书名：<%= @book.title %></h4>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_tag(edit_number_path, method: :post) do %>
      <%= hidden_field_tag :isbn, @book.isbn %>
      <%= label_tag :increse_number, "入库数量" %>
      <%= number_field_tag :increase_number, nil, class: "form-control" %>
      <%= submit_tag "入库", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
