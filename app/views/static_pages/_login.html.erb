<h1>登陆</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label "用户名" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label "密码" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "登陆", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
