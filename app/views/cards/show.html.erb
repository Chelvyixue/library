<% provide(:title, "#{@card.name}的借阅记录") %>
<h1><%= @card.name %>的借阅记录</h1>

<%= render 'shared/display_books' %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>借书</h2>
    <%= form_tag(borrow_book_id_path, method: :patch) do %>
      <%= hidden_field_tag :card_id, @card.id %>
      <%= label_tag :isbn, "书号" %>
      <%= text_field_tag :isbn, nil, class: "form-control" %>
      <%= submit_tag "确定", class: "btn btn-default" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>还书</h2>
    <%= form_tag(return_book_id_path, method: :patch) do %>
      <%= hidden_field_tag :card_id, @card.id %>
      <%= label_tag :isbn, "书号" %>
      <%= text_field_tag :isbn, nil, class: "form-control" %>
      <%= submit_tag "确定", class: "btn btn-default" %>
    <% end %>
  </div>
</div>
