<% provide(:title, "借书证管理") %>
<h1>借书证管理</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>添加借书证</h2>
    <%= form_for(@card) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "姓名" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :dept, "单位" %>
      <%= f.text_field :dept, class: "form-control" %>

      <%= f.label :card_type, "类别" %>
      <%= f.select :card_type,
          options_for_select(%w[学生 教师]), {},
          { class: "form-control" } %><br />

      <%= f.submit "添加", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>已有借书证</h2>
    <%= will_paginate %>

    <ul class="list-group">
      <% @cards.each do |card| %>
        <li class="list-group-item">
          <h4 class="list-group-item-heading"><%= card.id %></h4>
          <p class="list-group-item-text">
            <b><%= card.name %></b> <%= card.dept %> <%= card.card_type %>
            <%= link_to "删除", card, method: :delete, data: { confirm: "确定删除？" },
                class: "list-group-item-text right" %>
          </p>
        </li>
      <% end %>
    </ul>

    <%= will_paginate %>
  </div>
</div>
